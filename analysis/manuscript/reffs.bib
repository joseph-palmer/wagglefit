}
@article{Reynolds2012,
   abstract = {Levy walks are a widely used but contentious model of animal movement patterns. They are contentious because they have been wrongly ascribed to some animal species through use of incorrect statistical methods and because they have not been adequately compared against strong alternative models, such as composite correlated random walks. This lack of comparison has been partly because the strong alternative models do not have simple likelihood functions. Here I show that power-spectra and the distribution of the first significant digits (the leading non-zero digits) of the step lengths can distinguish between Levy walks and composite correlated random walks. Using these diagnostic tools, I bolster previous claims that honey bees use a movement strategy that can be approximated by Levy walks when searching for their hive or for a food source. © 2012 by the Ecological Society of America.},
