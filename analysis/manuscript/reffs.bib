   pmid = {29326297},
   publisher = {Company of Biologists},
   title = {Current status and future directions of Lévy walk research},
   volume = {7},
   url = {http://www.ncbi.nlm.nih.gov/pubmed/29326297 http://www.pubmedcentral.nih.gov/articlerender.fcgi?artid=PMC5829503},
   year = {2018},
