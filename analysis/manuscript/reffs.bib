   issn = {13652745},
   issue = {1},
   journal = {Journal of Ecology},
   keywords = {Gaussian,dispersal distance,dispersal location kernel,dispersal mode,exponential,exponential power,log-sech,plant height,probability density function,seed mass},
   month = {1},
   pages = {6-19},
   publisher = {John Wiley & Sons, Ltd (10.1111)},
