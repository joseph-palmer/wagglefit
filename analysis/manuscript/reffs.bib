}
@generic{GruTer2014,
   abstract = {Copying others can greatly improve individual fitness and is fundamental for the organisation of societies. Yet in some situations it is better to ignore social information and either explore the world individually or use personal information obtained through prior experience. Insects provide excellent models to study the strategic use of social information, but insights from recent research have rarely been viewed in the light of social learning strategies. Here we discuss how insects tailor their reliance on social information to those circumstances for which it is most beneficial, and suggest that insects and vertebrates use similar information-use strategies. We highlight future research avenues, including the use of molecular tools to study the genetic and genomic basis of social information use. © 2014 Elsevier Ltd.},
