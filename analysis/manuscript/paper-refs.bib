issn = {00281042},
journal = {Naturwissenschaften},
keywords = {Apis mellifera,Associative learning,Foraging choice,Information transfer,Olfactory experiences},
month = {mar},
number = {3},
pages = {218--222},
pmid = {17119909},
publisher = {Springer},
title = {{Floral odor learning within the hive affects honeybees' foraging decisions}},
url = {https://link.springer.com/article/10.1007/s00114-006-0176-0},
