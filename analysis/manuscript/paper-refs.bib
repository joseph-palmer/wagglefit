issn = {1553-7358},
journal = {PLoS Computational Biology},
keywords = {Animal sociality,Ants,Collective animal behavior,Food,Foraging,Image analysis,Insect pheromones,Pheromones},
month = {aug},
number = {8},
pages = {e1002670},
publisher = {Public Library of Science},
