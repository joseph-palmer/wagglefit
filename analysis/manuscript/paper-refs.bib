keywords = {Advertising,Bees,Computer software,Foraging,Fourier analysis,Honey bees,Video recording,Waggle dancing},
month = {dec},
number = {12},
pages = {e0188626},
publisher = {Public Library of Science},
title = {{Automatic detection and decoding of honey bee waggle dances}},
